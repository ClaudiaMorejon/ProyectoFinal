<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Principal">
    <ContentPage.Content>


        <ListView x:Name="lstPet" HasUnevenRows="True" ItemSelected="OnSelection">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="1" Text="{Binding name}"/>
                                <Label Grid.Column="2" Text="{Binding age}"/>
                                <Label Grid.Column="3" Text="{Binding gender}"/>
                                <Label Grid.Column="4" Text="{Binding description}"/>
                            </StackLayout>
                            <Image Source="{Binding picture}" WidthRequest="75" HeightRequest="75"/>
                            
                                

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        
        


    </ContentPage.Content>
</ContentPage>