<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Login">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="https://dibujosfaciles-dehacer.com/wp-content/uploads/2017/12/dibujos-de-perros-para-ni%C3%B1os.jpg"/>
            <Label Text="PET USER" HorizontalOptions="Center"/>

            <Entry x:Name="txtUsuario" 
                   Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtClave" 
                   Placeholder="Ingrese la clave"
                   IsPassword="True"/>

            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" BackgroundColor="Cyan"/>

            <Button x:Name="btnRegistrar" Text="Registrarse" Clicked="btnRegistrar_Clicked"/>
            <Button x:Name="btnSeleccionarFoto" Text="Seleccionar imagen" Clicked="btnSeleccionarFoto_Clicked"/>
            <Image x:Name="Imagen"></Image>





        </StackLayout>
    </ContentPage.Content>
</ContentPage>